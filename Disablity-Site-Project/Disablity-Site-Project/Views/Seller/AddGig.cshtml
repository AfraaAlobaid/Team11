@{
    ViewBag.Title = "Add Gig";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .dollar {
        position: relative;
    }

        .dollar input {
            padding-left: 15px;
        }

        .dollar:before {
            position: absolute;
            content: "$";
            left: 5px;
            top: 10px;
        }
</style>

<div class="content bg-white m-10">
    <br />
    <br />
    <div class="row" style="height:700px;">
        <form enctype="multipart/form-data" action="@Url.Action("PostAddGig","Seller")" method="post">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="panel panel-flat">
                        <div class="panel-heading">
                            <div class="text-left" id="alertMsg" style="color:@ViewBag.color ; font-weight:bold">
                                @ViewBag.msg
                            </div>
                            <h3 class="panel-title" align="center"><u>New Gig</u></h3>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="text-bold">Gig Title<span class="text-danger">*</span></label>
                                <input type="text" name="Title" class="form-control" placeholder="Add Job Title" required>
                            </div>
                            <div class="form-group">
                                <label class="text-bold">Short description<span class="text-danger">*</span></label>
                                <input  onkeyup="countChar(this)" name="Description" class="form-control" placeholder="Add gig description here..." required />
                                @*<div id="charNum" style="color:green">0/500 maximum characters</div>*@
                            </div>
                            <div class="form-group">
                                <label class="text-bold">Price<span class="text-danger">*</span></label><br>
                                <div class="dollar"><input name="Price" class="form-control" min="0" step="0.01" type="number"></div>
                            </div>

                            <div class="form-group">
                                <label class="text-bold">Add gig image:</label><span class="text-danger">*</span><br />
                                <input type="file" name="Image" class="form-control" required accept="image/png, image/jpeg" />
                            </div>
                            <div class="text-right">
                                <button type="submit" id="subBtn" class="btn btn-primary">Add<i class="icon-database-insert position-right"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<script>
    function countChar(val) {
        var len = val.value.length;
        if (len >= 1000) {
            val.value = val.value.substring(0, 500);
        } else {
            $('#charNum').text(-(((500 - len)) - (500)) + "/500 maximum characters");
        }
    };
</script>